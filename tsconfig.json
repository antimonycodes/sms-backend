{
  "compilerOptions": {
    "target": "ES6",
    // "module": "NodeNext",
    "module": "CommonJS",
    // "moduleResolution": "NodeNext",

    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  //   "include": ["src"],
  "include": ["src/**/*"],
  //   "exclude": ["node_modules", "dist"]
  "exclude": ["node_modules"]
}
